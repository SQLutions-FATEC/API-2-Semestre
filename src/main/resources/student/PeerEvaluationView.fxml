<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.PeerEvaluationController" spacing="10" alignment="CENTER">
    <!-- Título e Período -->
    <Label text="SPRINT 1" style="-fx-font-size: 24px;"/>
    <Label text="Período: 09/09/2024 a 29/09/2024" />

    <!-- Seletor de Avaliações Anteriores -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Consultar avaliações anteriores" />
        <ComboBox fx:id="previousEvaluationsComboBox" promptText="selecione"/>
    </HBox>

    <!-- Tabela de Avaliações -->
    <TableView fx:id="evaluationTable">
        <columns>
            <TableColumn text="Alunos" />
            <TableColumn text="Proatividade" />
            <TableColumn text="Autonomia" />
            <TableColumn text="Colaboração" />
            <TableColumn text="Entrega" />
        </columns>
    </TableView>

    <!-- Botão de Voltar -->
    <Button text="Voltar para tela de avaliação" fx:id="backButton" />
</VBox>
